{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": { "buildCommand": "npm run build" }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api(/|$)(.*)",
      "dest": "/src/index.ts"
    },
    {
      "src": "/api-docs(.*?)",
      "dest": "/src/index.ts"
    },
    {
      "src": "/v1/swagger.json",
      "dest": "/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}