{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/swagger-ui.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api(/|$)(.*)",
      "dest": "/src/index.ts"
    },
    {
      "src": "/api-docs(/.*)?",
      "dest": "/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}